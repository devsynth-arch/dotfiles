# Show help
alt + F1
	OpenApps --KeyHelp

############################
# ----- Applications ----- #
############################

# ----- Main Apps ----- #

# Open Terminal (Normal & Floating)
super + {_,alt + }Return
	OpenApps --{terminal,floating}

# App launcher
super + @space
	OpenApps --menu

# Theme Selector
alt + @space
	RiceSelector

# ----- Your Apps ----- #

# Apps (browser, editor, filemanager)
super + {b,e,f}
	OpenApps --{browser,editor,filemanager}

# Terminal apps (yazi, nvim, ncmpcpp)
super + {y,v,m}
	OpenApps --{yazi,nvim,music}

# Media apps (Pavucontrol, Telegram, Whatsapp)
super + {p,t,w}
	OpenApps --{soundcontrol,telegram,whats}

# Rice Editor App
super + r
    RiceEditor

# ----- Rofi Applets ----- #

#Terminal Selector
super + alt + t
	Term --selecterm

# Wallpaper selector
super + alt + w
	WallSelect

# Mount Android phones
super + alt + a
	OpenApps --android

# Network Manager
super + alt + n
	OpenApps --netmanager

# Bluetooth
super + alt + b
	OpenApps --bluetooth

# Clipboard
super + alt + c
	OpenApps --clipboard

# Screenshot
super + alt + s
	OpenApps --screenshot

# PowerMenu
super + alt + p
	OpenApps --powermenu

# Rofi style
super + alt + l
    RofiLauncher --choose-style

# Keyboard Layout Applet
super + alt + k
	OpenApps --keyboard

# ----- Environment Apps ----- #

# Scratchpad
super + alt + o
	OpenApps --scratch

# jgmenu
~button3
    win=$(xdotool getmouselocation --shell | sed -n 's/^WINDOW=\(.*\)/\1/p'); \
    type=$(xprop -id "$win" _NET_WM_WINDOW_TYPE 2>/dev/null); \
    case "$type" in *DESKTOP*) \
        jgmenu --csv-file="$HOME/.config/bspwm/config/jgmenu.txt" \
               --config-file="$HOME/.config/bspwm/config/jgmenurc";; esac

# Power off, Reboot, Log out, Lockscreen, kill an app
ctrl + super + alt + {p,r,q,l,k,s}
	{systemctl poweroff, systemctl reboot,bspc quit,ScreenLocker,xkill,SoftReload}

# Hide/Show Bar (Polybar and/or eww)
super + alt + {h,u}
	HideBar {-h,-u}

# Change transparency on focused window
ctrl + alt + {plus,minus,t}
	picom-trans {-c -3,-c +3,-c -d}

# Manage brightness
XF86MonBrightness{Up,Down}
	Brightness {up,down}

# Volume control
XF86Audio{RaiseVolume,LowerVolume,Mute}
	Volume{ --inc, --dec, --toggle}

# Music Control
XF86Audio{Next,Prev,Play,Stop}
	MediaControl {--next,--previous,--toggle,--stop}

#####################
# ----- Bspwm ----- #
#####################

# Reload BSPWM
super + alt + r
	bspc wm -r

# Close/Kill node
super + {_,shift + }x
	bspc node -{c,k}

# Reload sxhkd Keybinds
super + Escape
	pkill -USR1 -x sxhkd; dunstify -u low -i ~/.config/bspwm/config/assets/reload.svg 'sxhkd' 'The configuration file has been reloaded successfully!'

# Reload bspwmrc
super + alt + b
	source "$HOME"/.config/bspwm/bspwmrc

# Reload bspc rules
super + alt + u
	bspc rule -r; bspc rule -a FloaTerm sticky=on floating=on rectangle=200x200+0+0; bspc rule -a Updating sticky=on floating=on rectangle=200x200+0+0; bspc rule -a YaziTerm sticky=on floating=on rectangle=200x200+0+0; bspc rule -a MusicTerm sticky=on floating=on rectangle=200x200+0+0; bspc rule -a FetchTerm sticky=on floating=on rectangle=200x200+0+0

# ----- Node states and flags ----- #

# Set the node state
alt + {t,shift + t,a,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Set the node flags
alt + {m,x,s,p,h}
	bspc node -g {marked,locked,sticky,private,hidden}

# Show hidden nodes one by one
ctrl + alt + h
	bspc node $(bspc query -N -n .hidden.local.window | head -n1) --flag hidden=off

# ----- Focus/Swap Nodes ----- #

# Rotate desktop
ctrl + Tab
	bspc node @/ --rotate {90,-90}

# Switch workspace
super + {Left,Right}
	bspc desktop -f {prev,next}

# Focus or send to the given desktop
super + {_,ctrl + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# Send focused Node to workspace directionally
super + ctrl + {Left,Right}
	bspc node -d {prev,next} '--follow'

# Node switcher
alt + Tab
    rofi \
        -theme $HOME/.config/bspwm/config/rofi-themes/Windows.rasi \
        -show window -window-thumbnail \
        -window-hide-active-window true \
        -kb-accept-entry "!Alt-Tab,Return" \
        -kb-element-next "Alt-Tab"

# Focus the node in the given direction
super + alt + {Left,Down,Up,Right}
	{ DIR=west FALLBACK=prev; , DIR=south; , DIR=north; , DIR=east FALLBACK=next; } \
	bspc node -f $DIR.!sticky.!hidden.local || bspc node -f $FALLBACK.leaf.!sticky.!hidden.local

# Swap Nodes
ctrl + alt + {Left,Down,Up,Right}
	bspc node -s {west,south,north,east}.local

# Focus the last node/desktop
ctrl + shift {comma,period}
	bspc {node,desktop} -f last

# Preselect the direction (horizontal, vertical or cancel)
super + ctrl {h,v,q}
	bspc node -p {east,south,cancel}

# ----- Move/Resize Nodes ----- #

# balance desktop's nodes
super + ctrl + b
  bspc node @/ -B

# increase/decrease Node
super + alt + {plus,minus}
	bspc node -z {left -20,right +20,top -20,bottom +20} {20,-20}

# increase/decrease FLOATING node size (zoom in/out)
super + ctrl + {plus,minus}
	bspc node -z {left -20,right +20,top -20,bottom +20} {20,-20} --resize-by 20

# Move floating window
super + shift + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# ----- Multi operation functions ----- #

# Close all nodes in current desktop
super + ctrl + x
	bspc query -N -d | xargs -I id -n 1 bspc node id -c

# Close/Kill all unfocused local windows
super + n ; {x,k}
    bspc query -N -n '.!focused.!marked.local.window' | xargs -I id -n 1 bspc node id {-c,-k}

# Bring all marked windows to the focused desktop
super + n ; m
    bspc query -N -n '.marked' | xargs -I id -n 1 bspc node id -d focused --follow

# Bring everything from desktop X to the current desktop
# Example usage: super + n followed by 5 (brings everything from desktop 5)
super + n ; {1-9}
    bspc query -N -d {1-9} -n '.window' | xargs -I id -n 1 bspc node id -d focused
